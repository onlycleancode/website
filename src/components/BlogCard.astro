---
import type { CollectionEntry } from 'astro:content';
import { enrichBlogEntry } from '../utils/blogHelpers';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const enrichedData = enrichBlogEntry(post);
const { title, description, pubDate, tags } = enrichedData;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
  timeZone: 'America/Los_Angeles',
});
---

<article class="blog-card">
  <a href={`/blog/${post.slug}/`} class="card-link">
    <p class="post-date">{formattedDate}</p>
    <h3>{title}</h3>
    <p class="description">{description}</p>
  </a>
  <div class="tags">
    {tags.slice(0, 3).map((tag) => (
      <a href={`/blog/tags/${tag}/`} class="tag">{tag}</a>
    ))}
    {tags.length > 3 && <span class="tag">+{tags.length - 3}</span>}
  </div>
</article>

<style>
  .blog-card {
    background: var(--bg-primary);
    border-radius: 0.5rem;
    border: 1px solid var(--border-color);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .card-link {
    display: block;
    padding: 1.5rem;
    padding-bottom: 0.75rem;
    text-decoration: none;
    cursor: pointer;
  }

  .card-link:hover h3 {
    color: var(--primary-color);
  }

  .post-date {
    font-size: 0.8rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
    color: var(--text-primary);
    transition: color 0.2s ease;
  }

  .description {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 0;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    padding: 0 1.5rem 1.5rem;
  }
</style>
