      <text x="468" y="442" text-anchor="middle" fill="rgba(255,255,255,0.7)" font-size="9">Infra</text>
      <rect x="390" y="400" width="100" height="65" rx="5" fill="none" stroke="rgba(255,255,255,0.2)" stroke-width="1" />
    </g>

    <!-- Vertical NVLink connections between rows - CENTERED -->
    <line x1="300" y1="365" x2="300" y2="400" stroke="#7c3aed" stroke-width="2" stroke-dasharray="4,2" class="vertical-data-flow" />
