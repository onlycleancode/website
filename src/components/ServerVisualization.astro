      <line x1="350" y1="433" x2="357" y2="433" stroke="#fbbf24" stroke-width="2" class="data-flow" />
      <line x1="383" y1="433" x2="390" y2="433" stroke="#fbbf24" stroke-width="2" class="data-flow-reverse" />
      <text x="370" y="437" text-anchor="middle" fill="white" font-size="8" font-weight="700">NV</text>
    </g>

    <!-- GPU 4 (Infra) - Amber - CENTERED -->
    <g
      class="server-component gpu-infra"
      data-component="gpu-infra"
      tabindex="0"
      role="button"
      aria-label="GPU - Infrastructure projects"
    >
      <rect x="390" y="400" width="100" height="65" rx="5" fill="url(#gpuInfraBg)" class="breathe" />
      <circle cx="425" cy="432" r="20" fill="#92400e" stroke="#b45309" stroke-width="2" />
      <circle cx="425" cy="432" r="10" fill="#d97706" />
      <g class="fan-spin-reverse" style="transform-origin: 425px 432px;">
        <line x1="425" y1="415" x2="425" y2="422" stroke="#fcd34d" stroke-width="2" />
        <line x1="408" y1="432" x2="415" y2="432" stroke="#fcd34d" stroke-width="2" />
        <line x1="435" y1="432" x2="442" y2="432" stroke="#fcd34d" stroke-width="2" />
