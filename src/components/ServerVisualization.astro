      data-component="gpu-infra"
      tabindex="0"
      role="button"
      aria-label="NVLink - GPU Infrastructure"
    >
      <rect x="355" y="318" width="30" height="30" rx="4" fill="url(#gpuInfraBg)" class="nvlink-pulse" />
      <line x1="350" y1="333" x2="357" y2="333" stroke="#fbbf24" stroke-width="2" class="data-flow" />
      <line x1="383" y1="333" x2="390" y2="333" stroke="#fbbf24" stroke-width="2" class="data-flow-reverse" />
      <text x="370" y="337" text-anchor="middle" fill="white" font-size="8" font-weight="700">NV</text>
    </g>

    <!-- GPU 2 (Infra) - Amber - CENTERED -->
