      <rect x="314" y="232" width="8" height="26" rx="1" fill="#64748b" class="ram-flicker" />
      <rect x="326" y="232" width="8" height="26" rx="1" fill="#475569" class="ram-flicker-delay" />
      <!-- LED -->
      <circle cx="490" cy="245" r="5" fill="#22c55e" class="led-pulse" />
      <text x="420" y="252" text-anchor="middle" fill="#94a3b8" font-size="14" font-weight="600">HOST</text>
    </g>

    <!-- GPU ROW 1 -->
    <rect x="225" y="290" width="290" height="85" rx="5" fill="rgba(0,0,0,0.3)" stroke="#334155" stroke-width="1" />

    <!-- GPU 1 (AI/ML) - Purple - CENTERED -->
