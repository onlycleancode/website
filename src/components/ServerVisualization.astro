---
// 2D Server infrastructure diagram
// Web -> Switch -> GPU Server (left) + Storage Server (right)
// Mobile: Shows card UI below 768px
---

<!-- Mobile Card UI (shown below 768px) -->
<div class="mobile-server-ui">
  <p class="mobile-header">Tap to explore projects & posts</p>
  <div class="mobile-cards">
    <button class="mobile-card server-component" data-component="web" type="button">
      <span class="card-icon card-icon-web"></span>
      <span class="card-label">Web Development</span>
      <span class="card-arrow">→</span>
    </button>
    <button class="mobile-card server-component" data-component="switch" type="button">
      <span class="card-icon card-icon-switch"></span>
      <span class="card-label">Networking</span>
      <span class="card-arrow">→</span>
    </button>
    <button class="mobile-card server-component" data-component="host" type="button">
      <span class="card-icon card-icon-host"></span>
      <span class="card-label">Systems & OS</span>
      <span class="card-arrow">→</span>
    </button>
    <button class="mobile-card server-component" data-component="gpu-ai" type="button">
      <span class="card-icon card-icon-gpu-ai"></span>
      <span class="card-label">AI/ML & LLMs</span>
      <span class="card-arrow">→</span>
    </button>
    <button class="mobile-card server-component" data-component="gpu-infra" type="button">
      <span class="card-icon card-icon-gpu-infra"></span>
      <span class="card-label">GPU Infrastructure</span>
      <span class="card-arrow">→</span>
    </button>
    <button class="mobile-card server-component" data-component="storage" type="button">
      <span class="card-icon card-icon-storage"></span>
      <span class="card-label">Databases & Storage</span>
      <span class="card-arrow">→</span>
    </button>
    <button class="mobile-card server-component" data-component="distributed" type="button">
      <span class="card-icon card-icon-distributed"></span>
      <span class="card-label">Distributed Systems</span>
      <span class="card-arrow">→</span>
    </button>
  </div>
</div>

<!-- Desktop SVG Diagram (shown 768px and above) -->
<div class="server-viz-container">
  <svg
    class="server-viz"
    viewBox="0 0 900 520"
    xmlns="http://www.w3.org/2000/svg"
    role="img"
    aria-label="Interactive server diagram. Click components to explore related projects."
  >
    <defs>
      <!-- Gradients -->
      <linearGradient id="serverBg" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#1e293b" />
        <stop offset="100%" stop-color="#0f172a" />
      </linearGradient>
      <linearGradient id="hostBg" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#334155" />
        <stop offset="100%" stop-color="#1e293b" />
      </linearGradient>
      <linearGradient id="gpuAiBg" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#7c3aed" />
        <stop offset="100%" stop-color="#5b21b6" />
      </linearGradient>
      <linearGradient id="gpuInfraBg" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#f59e0b" />
        <stop offset="100%" stop-color="#d97706" />
      </linearGradient>
      <linearGradient id="storageBg" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#0ea5e9" />
        <stop offset="100%" stop-color="#0284c7" />
      </linearGradient>
      <linearGradient id="switchBg" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#10b981" />
        <stop offset="100%" stop-color="#059669" />
      </linearGradient>
      <linearGradient id="webBg" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="#ec4899" />
        <stop offset="100%" stop-color="#be185d" />
      </linearGradient>
      <linearGradient id="distBg" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" stop-color="#06b6d4" />
        <stop offset="100%" stop-color="#0891b2" />
      </linearGradient>

      <!-- Glow filter -->
      <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
        <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
        <feMerge>
          <feMergeNode in="coloredBlur"/>
          <feMergeNode in="SourceGraphic"/>
        </feMerge>
      </filter>
    </defs>

    <!-- ==================== WEB NODE ==================== -->
    <g
      class="server-component web-node"
      data-component="web"
      tabindex="0"
      role="button"
      aria-label="Web - Web Development projects"
    >
      <circle cx="70" cy="120" r="55" fill="url(#webBg)" class="pulse-subtle" />
      <ellipse cx="70" cy="120" rx="55" ry="22" fill="none" stroke="rgba(255,255,255,0.3)" stroke-width="1.5" class="rotate-globe" />
      <ellipse cx="70" cy="120" rx="33" ry="55" fill="none" stroke="rgba(255,255,255,0.3)" stroke-width="1.5" />
      <line x1="15" y1="120" x2="125" y2="120" stroke="rgba(255,255,255,0.3)" stroke-width="1.5" />
      <circle cx="70" cy="120" r="55" fill="none" stroke="rgba(255,255,255,0.2)" stroke-width="2" />
      <text x="70" y="126" text-anchor="middle" fill="white" font-size="16" font-weight="600">WEB</text>
    </g>

    <!-- Connection: Web to Switch -->
    <line x1="125" y1="120" x2="250" y2="120" stroke="#475569" stroke-width="3" stroke-dasharray="8,4" class="connection-line" />
    <circle cx="185" cy="120" r="5" fill="#10b981" class="data-packet" />

    <!-- ==================== SWITCH ==================== -->
    <g
      class="server-component switch-node"
      data-component="switch"
      tabindex="0"
      role="button"
      aria-label="Switch - Networking projects"
    >
      <rect x="250" y="85" width="400" height="70" rx="8" fill="url(#switchBg)" class="breathe" />
      <!-- Ports -->
      <rect x="270" y="105" width="14" height="10" rx="2" fill="#064e3b" />
      <rect x="290" y="105" width="14" height="10" rx="2" fill="#064e3b" />
      <rect x="310" y="105" width="14" height="10" rx="2" fill="#064e3b" />
      <rect x="330" y="105" width="14" height="10" rx="2" fill="#064e3b" />
      <rect x="350" y="105" width="14" height="10" rx="2" fill="#064e3b" />
      <rect x="370" y="105" width="14" height="10" rx="2" fill="#064e3b" />
      <!-- LEDs -->
      <circle cx="277" cy="132" r="4" fill="#4ade80" class="led-blink" />
      <circle cx="297" cy="132" r="4" fill="#4ade80" class="led-blink-delay" />
      <circle cx="317" cy="132" r="4" fill="#fbbf24" />
      <circle cx="337" cy="132" r="4" fill="#4ade80" class="led-blink" />
      <circle cx="357" cy="132" r="4" fill="#4ade80" />
      <circle cx="377" cy="132" r="4" fill="#4ade80" class="led-blink-delay" />
      <text x="520" y="128" text-anchor="middle" fill="white" font-size="18" font-weight="600">SWITCH</text>
      <rect x="250" y="85" width="400" height="70" rx="8" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1" />
    </g>

    <!-- Connection: Switch to GPU Server -->
    <line x1="370" y1="155" x2="370" y2="195" stroke="#06b6d4" stroke-width="3" stroke-dasharray="8,4" class="connection-line-vertical" />
    <circle cx="370" cy="175" r="5" fill="#06b6d4" class="data-packet-vertical-left" />

    <!-- Connection: Switch to Storage Server (Distributed) -->
    <g
      class="server-component distributed-connection"
      data-component="distributed"
      tabindex="0"
      role="button"
      aria-label="Connection to Distributed Systems"
    >
      <line x1="580" y1="155" x2="580" y2="195" stroke="#06b6d4" stroke-width="3" class="connection-line-vertical" />
      <circle cx="580" cy="175" r="5" fill="#06b6d4" class="data-packet-vertical" />
    </g>

    <!-- ==================== GPU SERVER (LEFT) ==================== -->
    <rect x="200" y="195" width="340" height="310" rx="10" fill="url(#serverBg)" class="server-shadow" />
    <rect x="200" y="195" width="340" height="310" rx="10" fill="none" stroke="#334155" stroke-width="2" />
    <!-- Rack rails -->
    <rect x="206" y="202" width="8" height="296" rx="2" fill="#334155" />
    <rect x="526" y="202" width="8" height="296" rx="2" fill="#334155" />
    <!-- Vents -->
    <g opacity="0.3">
