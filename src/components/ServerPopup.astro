---
// Server component popup that displays related projects and blog posts
// Content is populated dynamically based on component tags
---

<div id="server-popup" class="popup-overlay" aria-hidden="true">
  <div class="popup-content" role="dialog" aria-labelledby="popup-title">
    <div class="popup-header">
      <h3 id="popup-title">Component</h3>
      <button class="popup-close" aria-label="Close popup">&times;</button>
    </div>
    <div class="popup-body">
      <div class="popup-section" id="popup-projects">
        <h4>Projects</h4>
        <ul class="popup-list" id="projects-list">
          <!-- Populated by JavaScript -->
        </ul>
      </div>
      <div class="popup-section" id="popup-posts">
        <h4>Blog Posts</h4>
        <ul class="popup-list" id="posts-list">
          <!-- Populated by JavaScript -->
        </ul>
      </div>
      <div class="popup-section" id="popup-favorites">
        <h4>Favorites</h4>
        <ul class="popup-list" id="favorites-list">
          <!-- Populated by JavaScript -->
        </ul>
      </div>
    </div>
  </div>
</div>

<style>
  .popup-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .popup-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .popup-content {
    background: var(--bg-primary);
    border-radius: 1rem;
    padding: 2rem;
    max-width: 500px;
    width: 90%;
    max-height: 80vh;
    overflow-y: auto;
    transform: scale(0.9);
    transition: transform 0.3s ease;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .popup-overlay.active .popup-content {
    transform: scale(1);
  }

  .popup-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
  }

  .popup-header h3 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin: 0;
  }

  .popup-close {
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    color: var(--text-secondary);
    padding: 0;
    line-height: 1;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.25rem;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .popup-close:hover {
    background: var(--bg-secondary);
    color: var(--text-primary);
  }

  .popup-section {
    margin-bottom: 1.5rem;
  }

  .popup-section:last-child {
    margin-bottom: 0;
  }

  .popup-section h4 {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .popup-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .popup-list li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border-color);
  }

  .popup-list li:last-child {
    border-bottom: none;
  }

  .popup-list a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s ease;
  }

  .popup-list a:hover {
    color: #1d4ed8;
  }

  .popup-list .empty-state {
    color: var(--text-secondary);
    font-style: italic;
    font-size: 0.875rem;
  }

  .popup-list .favorite-author {
    color: var(--text-secondary);
    font-weight: 400;
    font-size: 0.875rem;
  }

  .popup-list .favorite-type {
    display: inline-block;
    background: var(--bg-secondary);
    color: var(--text-secondary);
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    margin-left: 0.5rem;
    vertical-align: middle;
  }

  @media (max-width: 480px) {
    .popup-content {
      padding: 1.5rem;
      margin: 1rem;
    }

    .popup-header h3 {
      font-size: 1.25rem;
    }
  }
</style>
