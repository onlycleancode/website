---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServerVisualization from '../components/ServerVisualization.astro';
import ServerPopup from '../components/ServerPopup.astro';
---

<BaseLayout title="Joel Montano - Personal Website">
  <!-- Hero Section -->
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1>I'm Joel.</h1>
      <p class="description">
        I am a TPM working on securing supercomputer infrastructure at Microsoft.
      </p>
      <p class="description" style="margin-top: 1rem;">
        This site hosts my writing and projects as I dive deep into full-stack computing. As the singularity approaches, I believe an intuitive understanding of the computing systems powering AI will be a key differentiator.
      </p>
    </div>
  </section>

  <!-- Server Visualization Section -->
  <!-- Projects Section -->
  <section class="section projects-section">
    <div class="container">
      <h2>Projects</h2>
      
      <p class="section-intro">
        Explore my work below. A few highlighted projects (coming soon), or click the diagram layers for a full breakdown.
      </p>

      <!-- Highlighted Projects (Carousel) -->
      <div class="highlighted-projects">
        <div class="caution-tape"></div>
        <div class="carousel-container">
          <button class="carousel-nav prev" aria-label="Previous project">&lt;</button>
          
          <div class="carousel-track-container">
            <div class="carousel-track">
              <!-- Tile 1 -->
              <button class="construction-card carousel-item" data-action="construction-popup" type="button">
                <div class="card-content">
                  <h3>Project 01</h3>
                </div>
                <div class="coming-soon-ribbon">Coming Soon</div>
              </button>
              
              <!-- Tile 2 -->
              <button class="construction-card carousel-item" data-action="construction-popup" type="button">
                <div class="card-content">
                  <h3>Project 02</h3>
                </div>
                <div class="coming-soon-ribbon">Coming Soon</div>
              </button>
              
              <!-- Tile 3 -->
              <button class="construction-card carousel-item" data-action="construction-popup" type="button">
                 <div class="card-content">
                  <h3>Project 03</h3>
                </div>
                <div class="coming-soon-ribbon">Coming Soon</div>
              </button>
            </div>
          </div>

          <button class="carousel-nav next" aria-label="Next project">&gt;</button>
        </div>
        <div class="caution-tape"></div>
      </div>
      
      <ServerVisualization />
    </div>
  </section>

  <!-- Coming Soon Popup -->
  <div id="construction-popup" class="construction-popup-overlay" aria-hidden="true">
    <div class="construction-popup-content">
      <div class="caution-stripe-top"></div>
      <p>Coming Soon...</p>
      <button class="construction-popup-close">Close</button>
    </div>
  </div>
      
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="section section-alt">
    <div class="container">
      <h2>Get In Touch</h2>
      <p>Connect with me:</p>
      <div class="contact-links">
        <a href="mailto:joel97montano@gmail.com">Email</a>
        <a href="https://github.com/onlycleancode" target="_blank" rel="noopener noreferrer">GitHub</a>
        <a href="https://linkedin.com/in/joelmontanoucf" target="_blank" rel="noopener noreferrer">LinkedIn</a>
        <a href="https://twitter.com/aisloppyjoel" target="_blank" rel="noopener noreferrer">Twitter/X</a>
      </div>
    </div>
  </section>

  <!-- Server Component Popup -->
  <ServerPopup />
</BaseLayout>

<script>
  import '../scripts/server-interaction.js';
  import '../scripts/carousel.js';
</script>
