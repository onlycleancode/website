---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';
import { enrichBlogEntry } from '../utils/blogHelpers';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const enrichedData = enrichBlogEntry(post);
const { title, description, pubDate, updatedDate, tags } = enrichedData;

const formattedPubDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdateDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={`${title} | Blog`} description={description}>
  <article class="blog-post" data-pagefind-body>
    <header class="post-header">
      <div class="container">
        <a href="/blog/" class="back-link">&larr; Back to Blog</a>
        <h1>{title}</h1>
        <div class="post-meta">
          <time datetime={pubDate.toISOString()}>{formattedPubDate}</time>
          {updatedDate && (
            <div class="updated">
              Last edited on <time datetime={updatedDate.toISOString()}>{formattedUpdateDate}</time>
            </div>
          )}
        </div>
        <div class="tags">
          {tags.map((tag) => (
            <a href={`/blog/tags/${tag}/`} class="tag">{tag}</a>
          ))}
        </div>
      </div>
    </header>
    <div class="post-content container">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding-bottom: 4rem;
  }

  .post-header {
    padding: 4rem 0 2rem;
    background: var(--bg-secondary);
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-block;
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 500;
    margin-bottom: 1.5rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: #1d4ed8;
  }

  .post-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
    line-height: 1.2;
  }

  .post-meta {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .updated {
    margin-top: 0.25rem;
    opacity: 0.8;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .post-content {
    max-width: 750px;
  }

  .post-content :global(h2) {
    font-size: 1.75rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .post-content :global(h3) {
    font-size: 1.35rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: var(--text-primary);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .post-content :global(pre) {
    background: var(--bg-secondary);
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    border: 1px solid var(--border-color);
  }

  .post-content :global(code) {
    font-family: 'SF Mono', 'Fira Code', 'Fira Mono', monospace;
    font-size: 0.9rem;
  }

  .post-content :global(p code) {
    background: var(--bg-secondary);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--primary-color);
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    background: var(--bg-secondary);
    font-style: italic;
  }

  .post-content :global(a) {
    color: var(--primary-color);
    text-decoration: underline;
  }

  .post-content :global(a:hover) {
    color: #1d4ed8;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 1.5rem 0;
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 2rem;
    }
  }
</style>
